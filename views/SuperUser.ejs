
 <div class="container">
    <div class="title">Request new Organization</div>
    <div class="content">
      <form action="/organization/create" method="POST">
        <fieldSet>
            <legend>Your Information:</legend>
            <div class="user-details">
            <div class="input-box">
                <span class="details">First Name</span>
                <input class="input100"  type="name"      name="firstName"      placeholder="Enter First Name" value="<%= typeof firstName != 'undefined' ? firstName : '' %>">
            </div>

            <div class="input-box">
                <span class="details">Last Name</span>
                <input class="input100"  type="name"      name="lastName"      placeholder="Enter Last Name"      value="<%= typeof lastName != 'undefined' ? lastName : '' %>">
            </div>

            <div class="input-box">
                <span class="details">Username - Login</span>
                <input class="input100"  type="name"      name="lastName"      placeholder="Enter Last Name"      value="<%= typeof lastName != 'undefined' ? lastName : '' %>">
            </div>

            <div class="input-box">
                <span class="details">Email</span>
                <input class="input100"  type="email"    name="personalEmail"    placeholder="Enter Email"    value="<%= typeof personalEmail != 'undefined' ? personalEmail : '' %>">
            </div>
            
            <div class="input-box">
                <span class="details">Password</span>
                <input class="input100" type="password" name="password" placeholder="Enter Password">
            </div>

            <div class="input-box">
                <span class="details">Confirm Password</span>
                <input class="input100" type="password"    name="passwordConfirmation"    placeholder="Enter Password again">
            </div>
            </div>
        </fieldSet>
        
        <br/>

            <fieldSet>
                <legend>Company Information:</legend>
				<div class="user-details">
					<div class="input-box">
						<span class="details">Proposed Company</span>
						<input class="input100"  type="text"      name="proposedCompany"      placeholder="Enter Proposed Company"      value="<%= typeof proposedCompany != 'undefined' ? proposedCompany : '' %>">
					</div>
				</div>
			</fieldSet>
            
			  <div class="container-login101-form-btn m-t-32 " >
				<button class="login101-form-btn button-form">
					Requests
				</button>
			</div>
      </form>
    </div>
  </div>

 
