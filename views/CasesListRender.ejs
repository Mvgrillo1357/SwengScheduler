
<h1 style="
display: flex;
justify-content: space-between;
">Cases 
    <nav style="display: inline-block; margin-top: -8px;">
    <ul>
        <li>
            <% if (route == 'casesUser') {%> <a class="button" href="/<%= route %>/create">Open a New Case</a> <% } %>
        </li>
    </ul>
    </nav>
</h1>

<table id="data-tables">
    <thead>
        <tr>
            <th>Description</th>
            <th>Status</th>
            <% if (route == 'casesHR') { %> <th>Opened By</th> <% } %>
            <th>Link to Comments</th>
        </tr>
    </thead>
<% CasesList.forEach(function(Case) { %>
    <tr>
        <td><%= Case.description %></td>
        <td><%= Case.status %></td>
        <% if (route == 'casesHR') { %> <td><%= Case.belongsTo.name %></td> <% } %>
        <td>
                <a href="/<%= route %>/Comments/<%= Case._id%>">Link to Comments</a>
        </td>
    </tr>
<% }) %>
</table>