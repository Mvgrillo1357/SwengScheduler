<h1 style="display: flex;
justify-content: space-between;
"
>Update <%= updateUser.name %>
    <nav style="display: inline-block; margin-top: -8px">
    <ul>
        <li>
            <a class="button" href="/EmployeeList/<%= updateUser._id %>/resetLink">Send Password Reset link</a>
            <% if (updateUser.status == 'active') { %>
              <form style="display:inline-block;" action="/employeelist/remove/<%= updateUser._id %>" method="POST">
                  <button style="display:inline-block;" type="submit" class="button"><span>Mark Terminate</span></button>
              </form>
            <% } else { %>
                <form style="display:inline-block;" action="/employeelist/active/<%= updateUser._id %>" method="POST">
                    <button style="display:inline-block;" type="submit" class="button"><span>Mark Active</span></button>
                </form>
            <% } %>
        </li>
        <li>
        </li>
    </ul>
    </nav>
</h1>

<div class="container">
  <div class="title">Edit Employee</div>
  <div class="content">
    <form action="" method="POST">
      <fieldSet>
          <legend>Information</legend>
          <div class="user-details">
          <div class="input-box">
              <span class="details">First Name</span>
              <input class="input100"  type="name"
              name="firstName"
              placeholder="Enter First Name"
              value="<%= updateUser.firstName ?? '' %>"
            />
          </div>

          <div class="input-box">
              <span class="details">Last Name</span>
              <input class="input100" 
              type="name"
              name="lastName"
              placeholder="Enter Last Name"
              value="<%= updateUser.lastName ?? '' %>"
            />
          </div>

          <div class="input-box">
              <span class="details">Username - Login</span>
              <input class="input100"  type="text"
              name="login"
              placeholder="Enter Login"
              disabled
              value="<%= updateUser.login ?? '' %>"
            />
          </div>

          <div class="input-box">
              <span class="details">Email</span>
              <input class="input100" 
              type="email"
              name="personalEmail"
              placeholder="Enter Email"
              value="<%= updateUser.personalEmail ?? '' %>"
            />
          </div>
          
          <div class="input-box">
              <span class="details">Role</span>
              <select name="role" class="input100">
                  <% updateUser.getRoles().forEach((role) => { %>
                      <option value="<%= role %>"
                          <%= role === updateUser.role ? 'selected' : '' %>
                      ><%= role %></option>
                  <% }) %>
              </select>
          </div>

          <div class="input-box">
              <span class="details">Manager</span>
          <select name="manager" class="input100">
              <option></option>
              <% managers.forEach((manager) => { %>
                  <option 
                    value="<%= manager._id %>" 
                  <% if(updateUser.manager && updateUser.manager._id.toString() == manager._id.toString()) { %> selected <% } %>
                  ><%= manager.name %></option>
              <% }) %>
            </select>
            </div>
          </div>
      </fieldSet>

          
      <div class="container-login101-form-btn m-t-32 " >
      <button class="login101-form-btn button-form">
        Update
      </button>
    </div>
    </form>
  </div>
</div>







