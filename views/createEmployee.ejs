<h1 style="display: flex;
justify-content: space-between;
"
>Create</h1>
<form action="./create" method="POST">
<fieldSet>
  <legend>Information:</legend>

<div>
    <label for="firstName">First name</label>
    <input
      type="name"
      name="firstName"
      placeholder="Enter First Name"
      value="<%= typeof data != 'undefined' ? data.firstName : '' %>"
    />
  
</div>
<div>
    <label for="lastName">Last name</label>
    <input
      type="name"
      name="lastName"
      placeholder="Enter Last Name"
      value="<%= typeof data != 'undefined' ? data.lastName : '' %>"
    />
  
</div>
<div>
    <label for="login">Login / Username</label>
    <input
      type="text"
      name="login"
      placeholder="Enter Login"
      value="<%= typeof data != 'undefined' ? data.login : '' %>"
    />
</div>

<div>
  <label for="personalEmail">Email</label>
  <input
    type="email"
    name="personalEmail"
    placeholder="Enter Email"
    value="<%= typeof data != 'undefined' ? data.personalEmail : '' %>"
  />
</div>


</fieldSet>
<div>
  <label for="role">Role</label>
  <select name="role">
    <% roles.forEach((role) => { %>
        <option value="<%= role %>"
          <% if (typeof data != 'undefined' && data.role == role) { %> selected <% } %>
        ><%= role %></option>
    <% }) %>
  </select>
</div>

<div>
  <label for="manager">Manager</label>
  <select name="manager">
    <option></option>
    <% managers.forEach((manager) => { %>
        <option value="<%= manager._id %>"
        <% if (typeof data != 'undefined' && data.manager != null && data.manager.toString() == manager._id.toString()) { %> selected <% } %> 
        ><%= manager.name %></option>
    <% }) %>
  </select>
</div>
<button type="submit" class="btn btn-primary btn-block">
    Create
  </button>
</form>


