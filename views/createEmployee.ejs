<div class="container">
  <div class="title">Create New Employee</div>
  <div class="content">
    <form action="./create" method="POST">
      <fieldSet>
          <legend>Information</legend>
          <div class="user-details">
          <div class="input-box">
              <span class="details">First Name</span>
              <input class="input100"   type="name"
              name="firstName"
              placeholder="Enter First Name"
              value="<%= typeof data != 'undefined' ? data.firstName : '' %>"
            />
          </div>

          <div class="input-box">
              <span class="details">Last Name</span>
              <input class="input100" type="name"
              name="lastName"
              placeholder="Enter Last Name"
              value="<%= typeof data != 'undefined' ? data.lastName : '' %>"
            />
          </div>

          <div class="input-box">
              <span class="details">Username - Login</span>
              <input class="input100"  type="text"
              name="login"
              placeholder="Enter Login"
              value="<%= typeof data != 'undefined' ? data.login : '' %>"
            />
          </div>

          <div class="input-box">
              <span class="details">Email</span>
              <input class="input100" 
              type="email"
              name="personalEmail"
              placeholder="Enter Email"
              value="<%= typeof data != 'undefined' ? data.personalEmail : '' %>"
            />
          </div>
          
          <div class="input-box">
              <span class="details">Role</span>
              <select class="input100" name="role">
                  <% roles.forEach((role) => { %>
                      <option value="<%= role %>"
                        <% if (typeof data != 'undefined' && data.role == role) { %> selected <% } %>
                      ><%= role %></option>
                  <% }) %>
                </select>
          </div>

          <div class="input-box">
              <span class="details">Manager</span>
              <select name="manager" class="input100">
                  <option></option>
                  <% managers.forEach((manager) => { %>
                      <option value="<%= manager._id %>"
                      <% if (typeof data != 'undefined' && data.manager != null && data.manager.toString() == manager._id.toString()) { %> selected <% } %> 
                      ><%= manager.name %></option>
                  <% }) %>
                </select>
            </div>
          </div>
      </fieldSet>

          
      <div class="container-login101-form-btn m-t-32 " >
      <button class="login101-form-btn button-form">
        Create
      </button>
    </div>
    </form>
  </div>
</div>


